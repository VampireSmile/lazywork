<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="欢迎使用"
            android:textColor="#3A5FCD"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="人脸识别考勤系统"
            android:textColor="#3A5FCD"
            android:textSize="30dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账号:"
                android:textColor="#3A5FCD"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_userid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入学号或教工号"
                android:textColor="#3A5FCD"
                android:textAlignment="center"
                android:background="@drawable/edit_shape_"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="密码:"
                android:textColor="#3A5FCD"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_userpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入密码"
                android:textColor="#3A5FCD"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:background="@drawable/edit_shape_"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_edit_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#3A5FCD"
                android:textSize="15dp"
                android:textStyle="italic"/>
            <ImageView
                android:id="@+id/edit_pass"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_edit"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:onClick="Dologin"
            android:background="@drawable/edit_text_shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题可联系管理员:yjwsunrise@qq.com"
            android:textStyle="italic"
            android:textColor="#3A5FCD"
            android:textSize="15dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>