<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.editPass"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="修改密码界面"
            android:textColor="#3A5FCD"
            android:textSize="30dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="账号:"
                android:textColor="#3A5FCD"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_Euserid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入学号或教工号"
                android:textColor="#3A5FCD"
                android:textAlignment="center"
                android:background="@drawable/edit_shape_"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="原密码:"
                android:textColor="#3A5FCD"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_Euserpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入原密码"
                android:textColor="#3A5FCD"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:background="@drawable/edit_shape_"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="新密码:"
                android:textColor="#3A5FCD"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_Eusernewpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入新密码"
                android:textColor="#3A5FCD"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:background="@drawable/edit_shape_"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="确认密码:"
                android:textColor="#3A5FCD"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_Eusernewpass2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请确认新密码"
                android:textColor="#3A5FCD"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:background="@drawable/edit_shape_"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_edit_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:text="修改"
            android:textColor="#FFFFFF"
            android:onClick="DoEdit"
            android:background="@drawable/edit_text_shape"/>
    </LinearLayout>
</LinearLayout>